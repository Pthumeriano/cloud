<div
  class='border-2 border-primary-green rounded-md p-4 m-auto shadow mmd:w-80 sm:w-96'
>
  <h1 class='font-bold text-2xl text-center pb-2'>Editar produto</h1>
  <form action='/admin/produtos/editar' method='POST' class='mb-2'>
    <div class='flex flex-col mb-2'>
      <label for='id' class='font-bold'>ID</label>
      <input
        type='text'
        name='id'
        id='id'
        value='{{id}}'
        readonly
        required
        class='bg-slate-200 border-2 border-primary-green rounded-sm outline-0 px-4 py-2 focus:shadow-md'
      />
    </div>
    <div class='flex flex-col mb-2'>
      <label for='name' class='font-bold'>Nome</label>
      <input
        type='text'
        name='name'
        id='name'
        value='{{name}}'
        required
        class='border-2 border-primary-green rounded-sm outline-0 px-4 py-2 focus:shadow-md'
      />
    </div>
    <div class='flex flex-col mb-2'>
      <label for='price' class='font-bold'>Preço</label>
      <input
        type='text'
        name='price'
        id='price'
        value='{{price}}'
        required
        class='border-2 border-primary-green rounded-sm outline-0 px-4 py-2 focus:shadow-md'
      />
    </div>
    <div class='flex flex-col mb-2'>
      <label for='description' class='font-bold'>Descrição</label>
      <textarea
        name='description'
        id='description'
        required
        class='min-h-16 border-2 border-primary-green rounded-sm outline-0 px-4 py-2 focus:shadow-md'
      >{{description}}</textarea>
    </div>
    <div class='flex flex-col mb-4'>
      <label for='category_id' class='font-bold'>Categoria</label>
      <select
        name='category_id'
        id='category_id'
        required
        class='bg-white border-2 border-primary-green rounded-sm outline-0 px-4 py-2 focus:shadow-md'
      >
        {{#each categories}}
          <option value='{{this.id}}' {{#if this.selected}}selected{{/if}}>{{this.name}}</option>
        {{/each}}
      </select>
    </div>
    <div>
      <input
        type='submit'
        value='Editar'
        class='font-bold text-white w-full bg-primary-green border-2 border-primary-green rounded-sm p-2 transition-colors hover:text-white hover:bg-dark-primary-green hover:border-dark-primary-green hover:cursor-pointer'
      />
    </div>
  </form>
  <a href='/admin/produtos' class='hover:text-dark-primary-green'>Voltar à lista</a>
</div>