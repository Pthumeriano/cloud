<h1 class='title'>Lista de produtos:</h1>
<ul class='list'>
  {{#each products}}
    <li class='list-card'>
      <h2>{{this.name}}</h2>
      <p><strong>ID:</strong> {{this.id}}</p>
      <p><strong>Preço:</strong> {{this.formatted_price}}</p>
      <p><strong>Categoria:</strong> {{this.category_name}}</p>
      <p><strong>Descrição:</strong> {{this.description}}</p>

      <div class='button-group'>
        <a href='/admin/produtos/editar/{{this.id}}' class='edit-button'>
          Editar
        </a>

        <form action='/admin/produtos/deletar' method='POST' class='m-0'>
          <input type='hidden' name='id' id='id' value='{{this.id}}' />
          <input type='submit' value='Deletar' class='delete-button' />
        </form>
      </div>
    </li>
  {{/each}}
</ul>
<a href='/admin' class='back-link'>
  Voltar ao painel
</a>